import random



numeroDeRondas = int(input("Ingrese la cantidad de rondas: "))
numeroDeTiradas = int(input("Ingrese el numero de tiradas por jugador: "))




def tirar_dados(numeroDeTiradas):
    suma = 0
    for _ in range(numeroDeTiradas):
        dado = random.randint(1, 6)
        if dado % 2 != 0:
            suma += dado
    return suma
tirar_dados(numeroDeTiradas)


def rondas(numeroDeRondas):
    ronda = 0
    for j in range(numeroDeRondas):
        ronda += j
    return ronda
rondas(numeroDeRondas)




